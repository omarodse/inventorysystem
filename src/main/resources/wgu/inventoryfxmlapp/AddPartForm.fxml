            </GridPane>
        </HBox>
        <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
            <padding>
                <Insets right="200.0" top="30.0" />
            </padding>
            <Button fx:id="saveAddPart" mnemonicParsing="false" onAction="#onSaveAddPart" text="Save" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
        </HBox>
    </VBox>
</AnchorPane>
