                <TextField fx:id="addPartNameField" style="-fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="addPartInvField" style="-fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
